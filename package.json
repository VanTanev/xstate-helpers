{
  "version": "0.10.3",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "repository": "https://github.com:VanTanev/xstate-helpers.git",
  "scripts": {
    "start": "npm-run-all -p 'watch' 'test --watchAll'",
    "watch": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "lint-staged": "lint-staged",
