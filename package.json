{
  "version": "0.0.3",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "npm-run-all -p 'start' 'test --watchAll'",
    "watch": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "@xstate/inspect": ">=0.4.0",
    "@xstate/react": ">=1.3.0",
    "react": ">=16",
    "xstate": "^4.15.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "xstate-helpers",
  "author": "Ivan Tanev",
  "module": "dist/xstate-helpers.esm.js",
  "size-limit": [
    {
      "path": "dist/xstate-helpers.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/xstate-helpers.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "@testing-library/react": "^11.2.6",
    "@testing-library/react-hooks": "^5.1.2",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@xstate/inspect": "^0.4.1",
    "@xstate/react": "^1.3.2",
    "husky": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4",
    "xstate": "^4.18.0"
  }
}
