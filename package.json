    "@testing-library/user-event": "^13.1.8",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@xstate/inspect": "^0.4.1",
    "@xstate/react": "^1.3.2",
    "husky": "^6.0.0",
    "jest-environment-jsdom-fifteen": "^1.0.2",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4",
    "xstate": "^4.18.0"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4.22",
    "**/@typescript-eslint/parser": "^4.22.0",
